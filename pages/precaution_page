import 'package:flutter/cupertino.dart';
import 'package:flutter/material.dart';
import 'package:flutter_projects/models/catalog.dart';
import 'package:flutter_projects/pages/Exercies_and_medication.dart';
import '../utils/routes.dart';
class Precautions extends StatelessWidget {
  final Item catalog;
  const Precautions({Key? key, required this.catalog})
      :assert(catalog!= null),
        super(key: key);

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: Colors.orange,
      appBar: AppBar(
        backgroundColor: Colors.transparent,
        title:Text("Precautionary Measures"),
      ),
      floatingActionButton: FloatingActionButton.extended(
        onPressed: ()=>Navigator.push(context, MaterialPageRoute(
            builder: (context)=>Exercise(catalog: catalog)
        )),
        icon: Icon(Icons.monitor_heart_outlined), label: Text("Medications"),
      ),
      body: Center(
        child: Column(
          children:[
            Container(
              padding: EdgeInsets.all(50),
              color:Colors.orangeAccent,
              child: Image.asset(catalog.image),
              
            ),
             Container(
                 padding: EdgeInsets.all(20),
                  child:  Text(catalog.precautions),
               decoration: BoxDecoration(
                 gradient:LinearGradient(
                     colors: [Colors.yellow,Colors.deepOrange]

                 )
               ),
             ),
                
            ]
        ),
      ));


  }
}
